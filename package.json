{
  "scripts": {
    "start": "node src/server.ts",
    "build": "pnpm run build:auth && pnpm run build:snb && pnpm run build:shell",
    "build:shell": "rsbuild build --config apps/shell/rsbuild.config.ts",
    "build:snb": "rsbuild build --config apps/snb/rsbuild.config.ts",
    "build:auth": "rsbuild build --config apps/auth/rsbuild.config.ts",
    "dev:shell": "rsbuild dev --config apps/shell/rsbuild.config.ts",
    "dev:snb": "rsbuild dev --config apps/snb/rsbuild.config.ts",
    "dev:auth": "rsbuild dev --config apps/auth/rsbuild.config.ts",
    "test": "pnpm run test:unit && pnpm run test:component && pnpm run test:integration",
    "test:unit": "node --experimental-strip-types --test \"src/**/*.unit.test.ts\" \"packages/**/src/**/*.unit.test.ts\"",
    "test:component": "playwright test -c playwright-ct.config.ts",
    "test:integration": "playwright test -c playwright.config.ts"
  },
  "type": "module",
  "dependencies": {
    "@chainsafe/libp2p-noise": "^16.1.4",
    "@chainsafe/libp2p-yamux": "^7.0.4",
    "@libp2p/identify": "^3.0.39",
    "@libp2p/tcp": "^10.1.19",
    "@module-federation/rsbuild-plugin": "^0.19.1",
    "@nats-io/nats-core": "^3.1.0",
    "@nats-io/transport-node": "^3.1.0",
    "@root-solar/api": "workspace:*",
    "@root-solar/auth": "workspace:*",
    "@root-solar/net": "workspace:*",
    "@root-solar/observability": "workspace:*",
    "@root-solar/server": "workspace:*",
    "@rsbuild/core": "^1.4.15",
    "@rsbuild/plugin-react": "^1.3.5",
    "@rsbuild/plugin-sass": "^1.3.5",
    "@surrealdb/node": "1.0.0-beta.3",
    "@trpc/client": "^11.5.1",
    "@trpc/server": "^11.5.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.11",
    "@valkey/valkey-glide": "^2.0.1",
    "express": "^5.1.0",
    "jotai": "^2.14.0",
    "jotai-optics": "^0.4.0",
    "libp2p": "^2.10.0",
    "nanoid": "^5.1.5",
    "optics-ts": "^2.4.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "surrealdb": "^1.3.2",
    "uint8arraylist": "^2.4.8",
    "wouter": "^3.7.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "sass": "^1.83.4"
  },
  "packageManager": "pnpm@10.15.1"
}
