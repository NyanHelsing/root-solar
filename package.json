        "@root-solar/flare": "workspace:*",
        "@root-solar/homepage": "workspace:*",
        "@root-solar/layout": "workspace:*",
        "@root-solar/missives": "workspace:*",
        "@root-solar/net": "workspace:*",
        "@root-solar/observability": "workspace:*",
        "@root-solar/routing": "workspace:*",
        "@root-solar/server": "workspace:*",
        "@root-solar/shell": "workspace:*",
        "@root-solar/tagging": "workspace:*",
        "@rsbuild/core": "^1.4.15",
        "@rsbuild/plugin-react": "^1.3.5",
        "@rsbuild/plugin-sass": "^1.3.5",
