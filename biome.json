{
    "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
    "files": {
        "ignore": ["node_modules", "dist", "coverage", "test-results"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "javascript": {
        "formatter": {
            "semicolons": "always",
            "quoteStyle": "double",
            "jsxQuoteStyle": "double",
            "trailingCommas": "none"
        }
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    }
}
